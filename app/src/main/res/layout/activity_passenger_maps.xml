<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".PassengerMapsActivity"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/topButtonsLayout"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/settingsButton"
        android:text="Settings"
        android:textColor="@color/yelow"
        android:backgroundTint="@color/design_default_color_on_primary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/singOutButton"
        android:text="Sing Out"
        android:textColor="@color/yelow"
        android:backgroundTint="@color/design_default_color_on_primary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

</LinearLayout>


<fragment
    android:id="@+id/map"
    android:layout_below="@+id/topButtonsLayout"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <Button
        android:id="@+id/bookTaxiButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Book Taxi"
        android:textColor="@color/yelow"
        android:backgroundTint="@color/design_default_color_on_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>